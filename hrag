#!/usr/bin/env python3
"""
Hybrid RAG CLI - Standalone runner script.

Usage:
    ./hrag              # Start interactive CLI
    ./hrag start        # Start the server
    ./hrag query "..."  # Run a query
    ./hrag ingest file  # Ingest a document
    ./hrag stats        # Show statistics
    ./hrag help         # Show help

For uv users:
    uv run ./hrag
    uv run python -m cli

For pip users:
    python -m cli
    # Or after pip install -e .:
    hybrid-rag
    hrag
"""

import sys
from pathlib import Path

# Add project root to path
project_root = Path(__file__).parent
sys.path.insert(0, str(project_root))

from cli.main import main

if __name__ == "__main__":
    main()
